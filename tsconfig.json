{
  "compilerOptions": {
    "jsx": "react",
    "target": "ESNext",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "typeRoots": ["types"],
    "paths": {
      "@/*": ["./src/*"],
      "@/main/*": ["./src/main/*"],
      "@/renderer/*": ["./src/renderer/*"]
    },
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src", "types"]
}
